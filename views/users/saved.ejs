<% layout("layouts/boilerplate") %>
    <h1>Favorites Posts</h1>
    <% for(let post of user.saved){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img crossorigin="anonymous" src="<%= post.image.url %>" alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= post.description %>
                        </h5>
                        <p class="card-text">
                            <%= post.tags %>
                        </p>
                        <a class="btn btn-primary" href="/posts/<%= post._id %>">View</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>