<% layout("layouts/boilerplate") %>

    <div class="row">
        <div class="col-md-6">
            <div class="image">
                <% if(currentUser.icon){ %>
                    <img src="<%= currentUser.icon.url %>" class="profile-icon" alt="">
                    <% } else { %>
                        <img src="https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png"
                            class="profile-icon" alt="">
                        <% } %>
                            <div class="overlay">
                                <form action="/profile/editImg?_method=PATCH" method="POST" id="editForm"
                                    enctype="multipart/form-data">
                                    <label for="icon" class="edit x">Edit</label>
                                    <input type="file" name="icon" hidden id="icon">
                                </form>
                                <% if(currentUser.icon.url!="https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png"){ %>
                                    <form action="/profile/deleteImg?_method=PATCH" method="POST">
                                        <label for="removing" class="remove x">Remove</label>
                                        <button id="removing" hidden>Remove</button>
                                    </form>
                                    <%}%>
                            </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= currentUser.username %>
                    </h5>
                    <h6 class="card-sbtitle mb-2 text-muted">
                        <%= currentUser.email %>
                    </h6>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Posted: <%= currentUser.posts.posted %>
                    </li>
                    <li class="list-group-item">Faviorates: <%= currentUser.posts.fav %>
                    </li>
                    <li class="list-group-item">Bio: <%= currentUser.bio %>
                    </li>
                    <li class="list-group-item"><a class="card-link btn btn-info" href="profile/edit"
                            method="POST">Edit</a></li>
                </ul>
            </div>
            <div class="card-body">

            </div>
        </div>
    </div>
    <div>
        <% if(!currentUser.history){ %>
            <h1>You Have Not Posted Anything Yet</h1>
            <% }else{ %>
                <% for(let post of currentUser.history){%>
                    <div class="card mb-3">
                        <div class="row">
                            <div class="col-md-4">
                                <img src="<%= post.image.url %>" alt="" class="img-fluid w-100 h-100">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= post.description %>
                                    </h5>
                                    <p class="card-text">
                                        <%= post.tags %>
                                    </p>
                                    <a class="btn btn-primary" href="/posts/<%= post._id %>">View</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
                        <% } %>
    </div>
    <script src="/JS/auto.js"></script>